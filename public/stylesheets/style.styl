dark_primary_color = #0288D1
primary_color = #03A9F4
light_primary_color = #B3E5FC
accent_color = #607D8B

level1 = 0 1px 3px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24)
level2 = 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
level3 = 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
level4 = 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
level5 = 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)


@import url(fonts.css)

html
	width 100%
	height 100%
body
	width 100%
	height 100%
	font-size 18px
  

p
	margin 0
	padding 0

h1
	margin 0
	padding 0

.index	
	background primary_color
	box-shadow level3
	font-family 'Roboto'
	display block 
	width 100%
	text-align center
	height 100px
	
	p	
		display block
		padding-top 30px
		color white
		font-size 2em
		
.options
	margin-top 150px
	text-align center
	button
		width 200px
		height 50px
		background accent_color
		color white
		font-family 'Roboto'
		text-align center
		border 0px solid white
		padding 5px
		box-shadow level2
		margin-top 25px